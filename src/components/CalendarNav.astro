---
import { prevYm, nextYm } from '../lib/dates'

interface Props {
  currentYm: string
}

const { currentYm } = Astro.props
const [yStr, mStr] = currentYm.split('-')
const year = Number(yStr)
const month = Number(mStr)

const prev = prevYm(year, month)
const next = nextYm(year, month)
const label = new Date(year, month - 1, 1).toLocaleString('en-US', { month: 'long', year: 'numeric' })
---

<div class="calendar-nav">
  <a href={`/?ym=${prev}`} class="calendar-nav-btn" aria-label="Previous month">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
    </svg>
  </a>
  <div class="calendar-nav-label">{label}</div>
  <a href={`/?ym=${next}`} class="calendar-nav-btn" aria-label="Next month">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
    </svg>
  </a>
</div>
