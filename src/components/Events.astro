---
import type { Event } from '@prisma/client'

interface Props {
  events: Event[]
}

const { events } = Astro.props

const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
---

<ol class="events-list">
  {events.map((event) => (
    <li>
      <a href={`/events/${event.slug}`} class="event-card">
        <div class="event-date-badge">
          <span class="event-date-month">{monthNames[event.start_time.getMonth()]}</span>
          <span class="event-date-day">{event.start_time.getDate()}</span>
        </div>
        <div class="event-content">
          <h3 class="event-title">{event.title}</h3>
          <dl class="event-meta">
            <div class="event-meta-item">
              <dt>
                <span class="sr-only">Time</span>
                <svg class="event-meta-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm.75-13a.75.75 0 0 0-1.5 0v5c0 .414.336.75.75.75h4a.75.75 0 0 0 0-1.5h-3.25V5Z" clip-rule="evenodd" />
                </svg>
              </dt>
              <dd>
                <time datetime={event.start_time.toLocaleTimeString()}>
                  {event.start_time.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })} &ndash; {event.end_time.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
                </time>
              </dd>
            </div>
            {event.location && (
              <div class="event-meta-location">
                <dt>
                  <span class="sr-only">Location</span>
                  <svg class="event-meta-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="m9.69 18.933.003.001C9.89 19.02 10 19 10 19s.11.02.308-.066l.002-.001.006-.003.018-.008a5.741 5.741 0 0 0 .281-.14c.186-.096.446-.24.757-.433.62-.384 1.445-.966 2.274-1.765C15.302 14.988 17 12.493 17 9A7 7 0 1 0 3 9c0 3.492 1.698 5.988 3.355 7.584a13.731 13.731 0 0 0 2.274 1.765 11.842 11.842 0 0 0 .976.544l.062.029.018.008.006.003ZM10 11.25a2.25 2.25 0 1 0 0-4.5 2.25 2.25 0 0 0 0 4.5Z" clip-rule="evenodd" />
                  </svg>
                </dt>
                <dd>{event.location}</dd>
              </div>
            )}
          </dl>
        </div>
      </a>
    </li>
  ))}
</ol>
