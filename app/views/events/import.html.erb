<div class="m-8">
  <h3 class="text-lg font-bold text-gray-900 sm:text-xl">
              Import a New Event
  </h3>
  <p class="italic"> Current supported import formats:</p>
  <ul class="list-disc pl-5">
    <li class="italic">iCalendar format (.ics)</li>
  </ul>
</div>
<%= form_with url: import_events_path, method: :post, local: true do |form| %>
  <div class="mx-auto max-w-screen-xl px-4 py-2 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-x-16 gap-y-8 lg:grid-cols-5">
      <div class="rounded-lg bg-white p-8 shadow-lg lg:col-span-3 lg:p-12">
          <div class="rounded-lg border mb-4">
            <%= form.label :url, "Enter URL for import...", class: "sr-only", for: "url" %>
            <%= text_field_tag :url, nil, class: "w-full rounded-lg border-gray-200 p-3 text-sm", placeholder: "Enter URL for import...(.ics)", type: "text", id: "url" %>
          </div>
          <div class="mt-4">
            <%= submit_tag "Import", class: "inline-block w-full rounded-lg bg-black px-5 py-3 font-medium text-white sm:w-auto" %>
          </div>
      </div>
    </div>
  </div>
<% end %>
