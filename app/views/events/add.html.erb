<div class="mx-auto max-w-screen-xl px-4 py-4 bg-grey10 sm:px-6 sm:py-12 lg:px-8">
  <div class="bg-white w-3/5 border-2 rounded-lg border-grey8">
    <div class="bg-grey10 p-6">
      <p class="text-lg text-grey3 sm:text-xl">
        Add a New Event
      </p>
    </div>
    <div class="p-6">
      <%= form_with model: @event, url: create_event_path, local: true do |form| %>
        <div class="rounded-lg border mb-4">
          <%= form.label :title, "Title *", class: "sr-only", for: "title" %>
          <%= form.text_field :title, class: "w-full rounded-lg border-grey8 p-4 text-sm", placeholder: "Title *", type: "text", id: "title" %>
        </div>
        <div class="rounded-lg border mb-4">
          <%= form.label :venue_details, class: "sr-only", for: "venue_details" %>
          <%= form.text_area :venue_details, class: "w-full rounded-lg border-grey8 p-4 text-sm", placeholder: "Location (enter address)", type: "text", id: "venue_details" %>
        </div>
        <div class="mb-4">
          <%= form.label :start_time, "Start time *", class: "ml-1 text-sm font-medium text-grey4" %>
            <%= form.datetime_select :start_time, class: "mt-2 w-full rounded-lg border-grey4 text-grey4 sm:text-sm" %>
        </div>
        <div class="mb-4">
          <%= form.label :end_time, "End time *", class: "ml-1 text-sm font-medium text-grey4" %>
          <%= form.datetime_select :end_time, class: "mt-2 w-full rounded-lg border-grey4 text-gray-700 sm:text-sm" %>
        </div>
          <div class="rounded-lg border mb-4 w-full">
            <%= form.label :website, class: "sr-only", for: "website" %>
            <%= form.text_area :website, class: "w-full rounded-lg border-grey4 p-4 text-sm", placeholder: "Website (enter URL)", type: "hyperlink", id: "website" %>
          </div>
        <div class="rounded-lg border mb-6">
            <%= form.label :description, class: "sr-only", for: "description" %>
            <%= form.text_area :description, class: "w-full rounded-lg border-grey4 p-4 text-sm", placeholder: "Description", rows: "8", id: "description" %>
        </div>
        <div>
          <%= form.submit class: "inline-block w-full rounded-lg bg-green4 px-5 py-3 font-medium text-grey10 sm:w-auto" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
