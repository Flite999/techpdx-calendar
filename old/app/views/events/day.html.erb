<!DOCTYPE html>
<html>

<head>
  <title>Events for <%= @date.strftime('%B %d, %Y') %> - TechPDX Calendar</title>
</head>

<body>
    <div class="mb-4 mt-8 ml-8">
        <h1 class="text-lg text-grey3"> Events for <%= @date.strftime('%B %d, %Y') %> </h1>
    </div>
    <div class="ml-4">
        <ul>
          <div class="grid grid-cols-4 gap-2">
            <% @events.each do |date, events| %>
              <div class="col-span-1 py-9">
                <div class="flex flex-col">
                  <div class="text-base text-grey4 font-medium">
                    <%= date.strftime('%B %d, %Y') %>
                  </div>
                  <div class="text-sm text-grey4">
                    <%= date.strftime('%A') %>
                  </div>
                </div>
              </div>
              <div class="col-span-3">
                <% if events.any? %>
                  <% events.each do |event| %>
                    <div class="border-b border-grey9">
                      <%= render partial: 'event_preview', locals: { event: event } %>
                    </div>
                  <% end %>
                <% else %>
                  <div class="text-grey5 py-4">
                    No events scheduled for this day.
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </ul>
    </div>
</body>

</html>